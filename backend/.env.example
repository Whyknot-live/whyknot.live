# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=10000

# MongoDB Configuration (Required)
# Free Tier (M0): 512 MB storage, 500 shared connections
# Get your connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://whyknot_admin_secret:<db_password>@whyknot-live.ph7g9r2.mongodb.net/?appName=whyknot-live
MONGODB_DB=whyknot-live

# Redis Configuration (Optional - for distributed rate limiting)
# Free Tier Options:
# - Upstash: 10,000 commands/day, 30 MB memory
# - Redis Cloud: 30 MB memory, 30 connections
# Get connection string from your Redis provider
REDIS_URL=redis://default:6aONLCOxi66ODmLeJiuQc0L9O1ZoFOEY@redis-18414.c330.asia-south1-1.gce.redns.redis-cloud.com:18414
USE_REDIS_RATE_LIMIT=1

# CORS Configuration
# For production, set to your frontend URL(s), comma-separated
CORS_ORIGIN=https://whyknot.live

# Resend Email Configuration (Required for sending emails)
# Free Tier: 100 emails/day, 3,000 emails/month
# Get your API key from https://resend.com/api-keys
ENABLE_EMAIL=1
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email From/Reply-To Configuration
# Must use your verified domain in Resend: mail.whyknot.live
# Format: "Display Name <email@mail.whyknot.live>"
EMAIL_FROM="whyknot.live <noreply@mail.whyknot.live>"
EMAIL_REPLY_TO=hello@mail.whyknot.live

