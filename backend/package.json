  "redis": "^5.10.0",
  "resend": "^6.5.2",
  "socks": "^2.8.7",
  "zod": "^4.1.13"
 },
 "devDependencies": {
  "@eslint/js": "^9.39.1",
  "@types/node": "^24.10.1",
  "@types/nodemailer": "^7.0.4",
  "@types/redis": "^4.0.11",
  "@typescript-eslint/eslint-plugin": "^8.48.1",
  "@typescript-eslint/parser": "^8.48.1",
  "eslint": "^9.39.1",
  "ts-node-dev": "^2.0.0",
  "tsx": "^4.21.0",
  "typescript": "^5.9.3"
 }
}
