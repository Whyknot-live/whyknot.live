  "resend": "^6.2.2",
  "zod": "^4.1.12"
 },
 "devDependencies": {
  "@eslint/js": "^9.38.0",
  "@types/node": "^24.9.1",
  "@types/nodemailer": "^7.0.3",
  "@types/redis": "^4.0.11",
  "@typescript-eslint/eslint-plugin": "^8.46.2",
  "@typescript-eslint/parser": "^8.46.2",
  "eslint": "^9.38.0",
  "ts-node-dev": "^2.0.0",
  "tsx": "^4.20.6",
  "typescript": "^5.9.3"
 }
