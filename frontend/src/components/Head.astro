---
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  type?: "website" | "article" | "product";
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  canonical?: string;
  noindex?: boolean;
  schema?: Record<string, any>;
}

const {
  title = "WhyKnot? - Discover Amazing Websites & Tools",
  description = "Discover the web's most innovative websites and tools. Join thousands discovering what's next in digital innovation.",
  keywords = "innovative websites, web tools, design inspiration, productivity tools, digital innovation, web discovery",
  image = "/images/og-image.png",
  type = "website",
  publishedTime,
  modifiedTime,
  author = "WhyKnot Team",
  canonical,
  noindex = false,
  schema,
} = Astro.props;

// Derive site from Astro.site when available to avoid hardcoding
const site = Astro.site?.origin ?? "https://www.whyknot.live";
const currentUrl = canonical || new URL(Astro.url.pathname, site).href;
const imageUrl = new URL(image, site).href;

// Default structured data for Organization
const defaultSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "WhyKnot",
  description: "Discover innovative websites and tools",
  url: site,
  logo: {
    "@type": "ImageObject",
    url: `${site}/images/logo-y-knot.png`,
    width: 1024,
    height: 1024,
  },
  sameAs: [
    "https://twitter.com/whyknot_live",
    "https://linkedin.com/company/whyknot-live",
  ],
  contactPoint: {
    "@type": "ContactPoint",
    contactType: "customer service",
    email: "hello@whyknot.live",
  },
};

const finalSchema = schema || defaultSchema;

// Google Analytics ID from environment
const gaId = import.meta.env.PUBLIC_GOOGLE_ANALYTICS_ID || "G-6YR39XYML4";

// Only load Google Analytics in production
const isProduction = import.meta.env.PROD;
---

{isProduction && (
  <>
    <!-- Google Analytics with Consent Mode v2 -->
    <script is:inline define:vars={{ gaId }}>
      // Initialize dataLayer and gtag function
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      
      // Set default consent state (denied for GDPR compliance)
      gtag('consent', 'default', {
        'analytics_storage': 'denied',
        'ad_storage': 'denied',
        'ad_personalization': 'denied',
        'ad_user_data': 'denied',
        'functionality_storage': 'denied',
        'personalization_storage': 'denied',
        'security_storage': 'granted'
      });
      
      // Initialize GA4
      gtag('js', new Date());
      gtag('config', gaId, {
        'anonymize_ip': true,
        'send_page_view': true
      });
      
      // Listen for consent updates from the cookie consent banner
      window.addEventListener('cookie-consent-update', function(e) {
        const consent = e.detail;
        gtag('consent', 'update', {
          'analytics_storage': consent.analytics ? 'granted' : 'denied',
          'ad_storage': consent.marketing ? 'granted' : 'denied',
          'ad_personalization': consent.marketing ? 'granted' : 'denied',
          'ad_user_data': consent.marketing ? 'granted' : 'denied',
          'functionality_storage': consent.preferences ? 'granted' : 'denied',
          'personalization_storage': consent.preferences ? 'granted' : 'denied'
        });
      });
      
      // Check for existing consent on page load
      (function() {
        try {
          const savedConsent = localStorage.getItem('whyknot_cookie_consent');
          if (savedConsent) {
            const consent = JSON.parse(savedConsent);
            window.dispatchEvent(new CustomEvent('cookie-consent-update', { detail: consent }));
          }
        } catch (e) {
          // Ignore localStorage errors
        }
      })();
    </script>

    <!-- Preconnect for Google Analytics -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
  </>
)}

<!-- Essential Meta Tags -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="light dark" />

<!-- SEO Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<link rel="canonical" href={currentUrl} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="WhyKnot" />
<meta property="og:locale" content="en_US" />
{
  publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
{
  modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )
}
{
  author && type === "article" && (
    <meta property="article:author" content={author} />
  )
}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={currentUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:creator" content="@whyknot_live" />
<meta name="twitter:site" content="@whyknot_live" />

<!-- Favicon and Icons -->
<link rel="icon" href="/images/logo-y-knot-transparent.png" type="image/png" />
<link rel="apple-touch-icon" href="/images/logo-y-knot-transparent.png" />
<meta name="theme-color" content="#20c5b5" />
<meta name="msapplication-TileColor" content="#20c5b5" />

<!-- Styles are imported in Layout.astro; avoid preloading source files directly -->

<!-- Preconnect for External Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- JSON-LD Structured Data -->
<script
  type="application/ld+json"
  is:inline
  set:html={JSON.stringify(finalSchema)}
/>

<!-- Additional Meta for Search Engines -->
<meta name="revisit-after" content="7 days" />
<meta name="rating" content="general" />
<meta name="distribution" content="web" />
<meta name="language" content="EN" />
<meta name="geo.region" content="US" />
<meta name="geo.placename" content="United States" />

<!-- Privacy and Security -->
<meta http-equiv="X-Content-Type-Options" content="nosniff" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
<meta name="referrer" content="strict-origin-when-cross-origin" />

<!-- Performance Hints -->
<link
  rel="preload"
  href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
  as="style"
  id="font-preload"
/>
<noscript
  ><link
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
    rel="stylesheet"
  /></noscript
>
<script is:inline>
  const fontLink = document.getElementById("font-preload");
  if (fontLink) {
    fontLink.rel = "stylesheet";
  }
</script>

