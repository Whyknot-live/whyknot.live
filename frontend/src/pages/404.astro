---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found — WhyKnot" description="We couldn't find that page. Explore our latest tools and articles instead." constrainContent>
	<section class="section container">
		<div class="card" data-tone="accent">
			<h1 class="error-title">404 — Page not found</h1>
			<p class="error-text">
				Sorry, we couldn't find the page you're looking for. It might have been moved or the URL could be incorrect.
			</p>
			<div class="cluster">
				<a class="btn" href="/">Go home</a>
				<a class="btn btn-outline" href="/blog">Read our blog</a>
				<a class="btn btn-secondary" href="/about">About WhyKnot</a>
			</div>
		</div>
	</section>
</Layout>

